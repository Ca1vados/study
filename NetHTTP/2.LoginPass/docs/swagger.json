{
    "swagger": "2.0",
    "info": {
        "description": "service for authorization by login password",
        "title": "Login password service",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {},
        "version": "1.0"
    },
    "host": "127.0.0.1:8080",
    "paths": {
        "/getallusers": {
            "get": {
                "description": "при запросе возвращает все данные из базы данных",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "database"
                ],
                "summary": "возвращает все данные из базы",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/entity.User"
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "description": "а запрос по логину и паролю возвращает секрет из базы или оишбку если логин или пароль неверны",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "authorisation"
                ],
                "summary": "authorisation by login password",
                "parameters": [
                    {
                        "description": "форма авторизации",
                        "name": "authorisationrequest",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/entity.User"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/entity.User"
                            }
                        }
                    }
                }
            }
        },
        "/register": {
            "post": {
                "description": "принимает в body логин, пароль, секрет  - в ответе либо OK либо error",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "register"
                ],
                "summary": "добавляет пользователя",
                "parameters": [
                    {
                        "description": "форма для добавления пользователя",
                        "name": "login_pass_secret",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/entity.UserReg"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "int"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "entity.User": {
            "type": "object",
            "properties": {
                "hash": {
                    "description": "поменял пароль в структуре на хэш, поменял тип (нужно пояснение по типу byte и [32]byte)",
                    "type": "string"
                },
                "login": {
                    "type": "string"
                },
                "secret": {
                    "type": "string"
                }
            }
        },
        "entity.UserReg": {
            "type": "object",
            "properties": {
                "login": {
                    "type": "string"
                },
                "pass": {
                    "description": "поменял пароль в структуре на хэш, поменял тип (нужно пояснение по типу byte и [32]byte)",
                    "type": "string"
                },
                "secret": {
                    "type": "string"
                }
            }
        }
    }
}